# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
charset = utf-8

# Rust files
[*.rs]
indent_style = space
indent_size = 4
max_line_length = 100

# Python files
[*.py]
indent_style = space
indent_size = 4
max_line_length = 100

# TOML files
[*.toml]
indent_style = space
indent_size = 2
max_line_length = 100

# JSON files
[*.json]
indent_style = space
indent_size = 2
max_line_length = 100

# Markdown files
[*.md]
indent_style = space
indent_size = 2
trim_trailing_whitespace = false
max_line_length = off

# YAML files
[*.{yml,yaml}]
indent_style = space
indent_size = 2
max_line_length = 100

# Shell scripts
[*.{sh,bash}]
indent_style = space
indent_size = 2
max_line_length = 100

# Batch files (Windows)
[*.{bat,cmd}]
indent_style = space
indent_size = 2
end_of_line = crlf

# PowerShell scripts
[*.ps1]
indent_style = space
indent_size = 2
end_of_line = crlf

# Makefile
[Makefile]
indent_style = tab
indent_size = 4
